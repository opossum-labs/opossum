{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Opossum",
  "version": "0.7.0",
  "identifier": "opossum",
  "build": {
    "frontendDist": "./leptos_ui",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "cd ./leptos_ui && trunk serve",
    "beforeBuildCommand": "cd ./leptos_ui && trunk build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Opossum",
        "label": "main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "plugins": {
    "allow":{
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    }
    },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
